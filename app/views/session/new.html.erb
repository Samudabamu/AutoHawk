<h1>User Login</h1>

<%= form_for '/pages' do %>
<fieldset>
  Email: <%= text_field_tag :email %>
</fieldset>
<fieldset>
  Password: <%= password_field_tag :password %>
</fieldset>

  <%= submit_tag "Submit" %>

  <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
  <% end %>

<% end %>
