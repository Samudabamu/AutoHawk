<h1>User Signup</h1>


<%= form_for(@user) do |f| %>
<fieldset>

  <%= f.label :username %>
  <%= f.text_field :username %>
</fieldset>
<fieldset>
  <%= f.label :email %>
  <%= f.text_field :email %>
</fieldset>
<fieldset>
  <%= f.label :password %>
  <%= f.text_field :password%>
</fieldset>
<fieldset>
  <%= f.label :password_confirmation %>
  <%= f.text_field :password_confirmation %>
</fieldset>

<%= submit_tag 'submit' %>
<% end %>
